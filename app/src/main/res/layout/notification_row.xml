<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Request Accepted!" />

            <TextView
                android:id="@+id/notification_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--<com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_bus"
                android:layout_width="100dp"
                android:layout_height="100dp" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noti_reason"
                android:text="Reason: field trip"/>
            <TextView
                android:id="@+id/noti_vehicle_no"
                android:layout_below="@+id/noti_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle: AB4356(Van)" />
            <TextView
                android:layout_below="@+id/noti_vehicle_no"
                android:id="@+id/noti_start_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From 05/05/2018 10:25" />
            <TextView
                android:layout_below="@+id/noti_start_dates"
                android:id="@+id/noti_end_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To 07/05/2018 15.30" />
            <TextView
                android:layout_below="@+id/noti_end_dates"
                android:id="@+id/noti_paseng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No of Passengers: 50" />
            <TextView
                android:id="@+id/reject_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noti_paseng"
                android:text="Rejected reason: bhgfyr" />

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>