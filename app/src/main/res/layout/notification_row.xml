<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Request Accepted!" />

            <TextView
                android:id="@+id/notification_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="02/05/2018" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_bus"
                android:layout_width="100dp"
                android:layout_height="100dp" />


            <TextView
                android:id="@+id/vehicle_no"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/image_bus"
                android:text="Vehicle No: AB4356" />

            <TextView
                android:id="@+id/vehicle_type"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_no"
                android:layout_toEndOf="@+id/image_bus"
                android:text="Vehicle Type: AC bus with 50 seats" />

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/booked_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_type"
                android:layout_toEndOf="@+id/image_bus"
                android:text="From 05/05/2018 To 07/05/2018" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image_bus"
                android:layout_alignParentEnd="true"
                android:id="@+id/delete_button"
                android:src="@drawable/ic_delete_black_24dp" />

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>